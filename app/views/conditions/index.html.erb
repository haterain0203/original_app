<p id="notice"><%= notice %></p>
<div class="container mt-5">
  <h1 class="bg-secondary text-white">Conditions</h1>
  
  <div class="row mt-5">
    <div class="col-md-4">
      <%= button_to '先月', {controller: 'conditions', action: 'index'}, {method: :get, params: {data: 'last'} }%>
    </div>
    <div class="col-md-4">
      <%#= button_to "#{Time.now.year}年#{Time.now.mon}月", {controller: 'conditions', action: 'index'}, {method: :get, params: {data: 'current'} }%>
      <%= button_to "今月", {controller: 'conditions', action: 'index'}, {method: :get, params: {data: 'current'} }%>
    </div>
    <div class="col-md-4">
      <%= button_to 'すべて', {controller: 'conditions', action: 'index'}, {method: :get, params: {data: 'all'} }%>
    </div>
  </div>
    
  
  <div class="row mt-4" >
    <div class="col-md-12">
      <%= line_chart @output %>
    </div> 
  </div>

    <h4 class="mt-5 text-white"><span class="bg-secondary px-3">Filter</span></h4>

  <div class="container">
    <%= form_tag(conditions_path,:method => 'get') do %>
      <div class="row form-group mt-3 center">
        <div class="" style="width: 15%;">
          <%= label_tag :meal do %> 食事
          <%= check_box_tag "graph_keys[]","meal" %>
          <% end %>
        </div>
        <div class="" style="width: 15%;">
          <%= label_tag :defecation do %> 排便
            <%= check_box_tag "graph_keys[]","defecation" %>
          <% end %>
        </div>
        <div class="" style="width: 15%;">
          <%= label_tag :sleep do %> 睡眠
            <%= check_box_tag "graph_keys[]","sleep" %>
          <% end %>
        </div>
        <div class="" style="width: 15%;">
          <%= label_tag :alcohol do %> 飲酒
            <%= check_box_tag "graph_keys[]","alcohol" %>
          <% end %>
        </div>
        <div class="" style="width: 15%;">
          <%= label_tag :exercise do %> 運動
           <%= check_box_tag "graph_keys[]","defecation" %>
          <% end %>
        </div>
        <div class="" style="width: 15%;">
          <%= label_tag :stress do %> ストレス
            <%= check_box_tag "graph_keys[]","exercise" %>
          <% end %>
        </div>

        <div class="col-md-12 mt-3">
        <!--森本メンターにやってもらってしまった箇所。submit押下→javascript→inputに現在のparamsを入れてコントローラーへ-->
        <input type="hidden" name="" value="" id="data_params" >
        <%= submit_tag 'Filter', :name => nil, onClick: "data_input();", class:"btn btn-outline-primary btn-block" %>
        <!--ここまで-->

        <!--resetした際に、当月のグラフに戻ってしまう。クリックされた時のparamsを送れれば対応できそうだが。。。森本メンターに教えてもらったのを流用してできた！-->
        <%#= link_to 'Reset', conditions_path, class:"btn btn-outline-secondary btn-block" %>
        <input type="hidden" name="" value="" id="data_params_reset" >
        <%= button_to 'Reset', {controller: 'conditions', action: 'index'}, onClick: "data_reset();", class:"btn btn-outline-secondary btn-block"%>
        </div>

      </div>
    <% end %>
  </div>

    <% if !params[:data].nil? %>
      <!--森本メンターにやってもらってしまった箇所-->
      <script>
        function data_input(){
          $("#data_params").prop("name", "data");
          $("#data_params").prop("value", "<%= params[:data] %>");
        }
      </script>
      <!--ここまで-->
    <% end %>

      <script>
        function data_reset(){
          $("#data_params_reset").prop("name", "graph_keys");
          $("#data_params_reset").prop("value", "");
          data_input();
        }
      </script>


  <div class="row mt-3" >
    <div class="col-md-12">
      <table class = "table table-hover mt-5">
        <thead class = "thead-dark">
          <tr>
            <th>Condition date</th>
            <th>Meal</th>
            <th>Defecation</th>
            <th>Sleep</th>
            <th>Alcohol</th>
            <th>Exercise</th>
            <th>Stress</th>
            <th>User</th>
            <th>コメント</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @conditions.each do |condition| %>
            <tr>
              <td><%= condition.condition_date %></td>
              <td><%= condition.meal %></td>
              <td><%= condition.defecation %></td>
              <td><%= condition.sleep %></td>
              <td><%= condition.alcohol %></td>
              <td><%= condition.exercise %></td>
              <td><%= condition.stress %></td>
              <td><%= condition.user_id %></td>
              <td><%= condition.text %></td>
              <td><%= link_to 'Show', condition %></td>
              <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
              <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Condition', new_condition_path, class: "btn btn-block btn-warning text-white" %>