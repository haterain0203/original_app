<header class = "navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
  <div class = "container">
    <%= link_to "Atopic Note", root_path, id: "logo", class:"text-white" %>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <nav>
        <ul class = "nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path , class:"text-white mr-3"%></li>
          <% if logged_in? %>
              <li><%= link_to "新規入力", new_condition_path , class:"text-white mr-3" %></li>
              <li><%= link_to "グラフ", conditions_path, class:"text-white mr-3" %></li>
              <li><%= link_to "表", conditions_table_path, class:"text-white mr-3" %></li>
              <li><%= link_to "Users",users_path, class:"text-white mr-3" %></li>
              <li><%= link_to "コミュティ",posts_path, class:"text-white mr-3" %></li>
              <li class="dropdown">
                  <a href="#" class="dropdown-toggle text-white mr-3" data-toggle="dropdown">
                    Account <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "マイアカウント" , current_user, class:"text-dark ml-3" %></li>
                    <li><%= link_to "設定", edit_user_path(current_user), class:"text-dark ml-3" %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "ログアウト", logout_path, method: :delete, class:"text-dark ml-3" %>
                    </li>
                  </ul>
              </li>
              <li><div class="p7button" data-button-text="購読する"></div></li>
          <% else %>
              <li><%= link_to "新規登録", new_user_path, class:"text-white mr-3" %></li>
              <li><%= link_to "ログイン", login_path, class:"text-white" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>