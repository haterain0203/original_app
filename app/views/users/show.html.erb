<% provide(:title, @user.name)%>

<div class="container">

  <div class="row">
        <h1 class="mt-3">
          <%= @user.name %>
        </h1>
  </div>

  <div class="row mb-3 justify-content-around">
    <div class="col-md-4 pb-1">
      <%= link_to "新規入力", new_condition_path, class:"btn btn-block btn-outline-secondary" %>
    </div>
    <div class="col-md-4 pb-1">
      <%= link_to "グラフ/表", conditions_path, class:"btn btn-block btn-outline-secondary" %>
    </div>
    <div class="col-md-4 pb-1">
      <%= link_to "投稿", posts_path, class:"btn btn-block btn-outline-secondary" %>
    </div>
  </div>

  <h2 class="mt-5">投稿内容</h2>
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-10">
        <small><%= l post.created_at %></small>
        <br>
        <a href="/posts/<%= post.id %>"><%= post.content %></a>
      </div>
      <% if current_user.id == post.user.id %>
        <div class="col-2">
          <br>
          <small class="text-nowrap"><%= link_to "削除", post, method: :delete,
                                        data: { confirm: "削除してよろしいですか?" } %></small>
        </div>
      <% end %>
    </div>
    <hr>
  <% end %>

  <div class="mt-5">
      <%= paginate @posts %>
  </div>

   

</div>
